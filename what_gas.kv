<front>:
    BoxLayout:
        padding: [50]
        orientation: "vertical"
        Label:# Tela que mostra o pre√ßo
            id: price_res
            font_size: 30
            text: "Valor R$ 0,00"
        BoxLayout:
            padding: 30
            orientation: "horizontal"
            Label:
                font_size: 30
                text: "Valor do Litro: R$="
            TextInput:
                id: price
                font_size: 30
                multiline: False
        BoxLayout:
            padding: 30
            orientation: "horizontal"
            Label:
                font_size: 30
                text: "Quantidade de Litro:"
            TextInput:
                id: litro
                font_size: 30
                multiline: False
        BoxLayout:
            padding: 30
            Button:
                font_size: 30
                on_press: root.nowPrice(price_res, price.text, litro.text)
                text: "Calcular"

                            
